<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundPrimary"
    tools:context="jhallman.splitter.activities.EditTabActivity">

    <TextView
        android:id="@+id/tv_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_tab_heading"
        android:textColor="@android:color/black"
        android:textSize="@dimen/heading_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_subheading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="Tab"
        android:textSize="@dimen/medium_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_heading" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/scrollview_height_big"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:gravity="center|top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subheading"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTabs"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_padding">

                <TextView
                    android:id="@+id/tv_pizza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pizza"
                    android:textSize="@dimen/medium_text" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bob 8$"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alice 9$"
                    android:textSize="@dimen/small_text" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total 17$"
                    android:textSize="@dimen/small_text" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_1"
                    android:layout_width="@dimen/floating_button_width"
                    android:layout_height="@dimen/floating_button_height"
                    android:layout_gravity="end"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:srcCompat="@drawable/ic_mode_edit_white_24dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_small" />

            <!-- TODO: Remove duplicates -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTabs"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_padding">

                <TextView
                    android:id="@+id/tv_beer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beer"
                    android:textSize="@dimen/medium_text" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bob 12$"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tom 20$"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alice 24$"
                    android:textSize="@dimen/small_text" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total 56$"
                    android:textSize="@dimen/small_text" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_2"
                    android:layout_width="@dimen/floating_button_width"
                    android:layout_height="@dimen/floating_button_height"
                    android:layout_gravity="end"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:srcCompat="@drawable/ic_mode_edit_white_24dp" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorTabs"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="@dimen/activity_horizontal_padding">

                <TextView
                    android:id="@+id/tv_tacos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tacos"
                    android:textSize="@dimen/medium_text" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/separator_height"
                    android:background="@android:color/black" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bob 12$"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tom 20$"
                    android:textSize="@dimen/small_text" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Alice 24$"
                    android:textSize="@dimen/small_text" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/space_small" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total 56$"
                    android:textSize="@dimen/small_text" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab_3"
                    android:layout_width="@dimen/floating_button_width"
                    android:layout_height="@dimen/floating_button_height"
                    android:layout_gravity="end"
                    app:backgroundTint="@color/colorPrimaryDark"
                    app:srcCompat="@drawable/ic_mode_edit_white_24dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>